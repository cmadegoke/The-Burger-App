{{!-- <div class="row"> --}}
  <div class="container">
  <div class = "row">
  <div class="col-md-6 offset-md-3">
    <h2>EAT-DAT-BURGER</h2>
    <form id="burger-form">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Burger name" name="Burger-name" />
      </div>
     <button class="btn btn-block btn-outline-success">Submit New Burger</button>
      </div>
      </div>
    </form>
  </div>
  <br></br>

 <div class="container">
  <div class="row">
  <div class="col-12 col-md-6">
    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Not Devoured
      </h3>
      <ul class="list-group-flush">
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            <button class="btn btn-info devourBurger" data-burgerId="{{this.id}}">
             Devour it
            </button>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  
    <div class="col-12 col-md-6">
    <div class="card mb-4">
      <h3 class="card-header">
        Burgers Devoured
      </h3>
      <ul class="list-group-flush">
       
        {{#each burgers}}
        {{#if this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center align-center">
          <h4>{{this.burger_name}}</h4>
          <div>
            
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>
</div>

<script src="./assets/burgers.js" type="text/javascript"></script>